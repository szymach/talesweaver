<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity repository-class="Talesweaver\Integration\Doctrine\Repository\PasswordResetTokenRepository" name="Talesweaver\Integration\Doctrine\Entity\PasswordResetToken">

        <id name="id" type="integer">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="value" type="string"/>
        <field name="active" type="boolean"/>
        <field name="createdAt" type="datetime_immutable"/>

        <many-to-one field="user" target-entity="Talesweaver\Integration\Doctrine\Entity\User" inversed-by="passwordResetTokens">
            <join-columns>
                <join-column on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>

    </entity>
</doctrine-mapping>
