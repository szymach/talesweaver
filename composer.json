{
    "name": "szymach/talesweaver",
    "description": "Book writing app",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Piotr Szymaszek",
            "email": "pszymaszek@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "AppBundle\\": "src/AppBundle" },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "autoload-dev": {
        "psr-4": { "Tests\\AppBundle\\": "tests/AppBundle" }
    },
    "require": {
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "egeloen/ckeditor-bundle": "^5.0",
        "ext-exif": "*",
        "ext-gd": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "friendsofsymfony/jsrouting-bundle": "^1.6",
        "fsi/doctrine-extensions-bundle": "^1.1@dev",
        "incenteev/composer-parameter-handler": "^2.0",
        "jms/i18n-routing-bundle": "^2.0",
        "knplabs/knp-menu-bundle": "^2.1",
        "knplabs/knp-snappy-bundle": "^1.4",
        "php": ">=7.1",
        "ramsey/uuid-doctrine": "^1.2",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "simple-bus/symfony-bridge": "^4.1",
        "symfony/monolog-bundle": "^2.12",
        "symfony/swiftmailer-bundle": "^2.5",
        "symfony/symfony": "^3.3",
        "twig/extensions": "^1.4",
        "white-october/pagerfanta-bundle": "^1.0"
    },
    "require-dev": {
        "codeception/codeception": "^2.3",
        "codeception/c3": "^2.0",
        "doctrine/doctrine-fixtures-bundle": "^2.3",
        "hautelook/alice-bundle": "^1.4",
        "phpunit/phpunit": "^6.1",
        "sensio/generator-bundle": "^3.1",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/phpunit-bridge": "^3.3"
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "symfony-tests-dir": "tests",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml",
            "env-map": {
                "database_host": "DB_HOST",
                "database_user": "DB_USER",
                "database_password": "DB_PASS",
                "database_name": "DB_NAME",
                "database_port": "DB_PORT",
                "mailer_host": "MAILER_HOST",
                "mailer_user": "MAILER_USER",
                "mailer_password": "MAILER_PASSWORD"
            }
        }
    }
}
