<table class="table">
    <thead>
        <tr>
            <th>{{ 'location.name'|trans }}</th>
            <th>{{ 'crud.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for location in locations %}
        <tr>
            <td>{{ location }}</td>
            <td>
                <button class="modal-load-edit-form btn btn-primary"
                    data-edit-form-url="{{ path('app_location_edit', { id: location.id }) }}"
                    title="{{ 'crud.edit' | trans }}"
                >
                    <span class="fa fa-edit"></span>
                </button>
                <button class="modal-delete btn btn-danger"
                    data-delete-url="{{ path('app_location_delete', { scene_id: scene.id, location_id: location.id }) }}"
                    title="{{ 'crud.delete' | trans }}"
                >
                    <span class="fa fa-trash"></span>
                </button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
