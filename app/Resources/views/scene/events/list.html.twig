<li class="events js-list"
    data-list-url="{{ path('app_event_list', { id: sceneId, page: events.currentPage }) }}"
>
    <span class="fa fa-bookmark logo-icon" title="{{ 'scene.tabs.events' | trans }}"></span>
    <span class="h4">{{ 'scene.tabs.events' | trans }}</span>
    <ul>
        {% for model in eventModels %}
            <li>
                <button data-form-url="{{ path('app_event_add', { id: sceneId, model: model }) }}" class="js-load-form js-edit-form btn btn-default">
                    {{ ('event.' ~ model ~ '.name') | trans }}
                </button>
            </li>
        {% endfor %}
    </ul>
    <ul>
        {% for event in events %}
            {% set model = event.model %}
            <li>
                <span title="{% include ('scene/events/'~ model|eventTemplateName ~ '.html.twig') with { model: model } only %}">{{ event.name }}</span>
                <button class="js-load-form js-edit-form btn btn-xs btn-primary"
                    data-form-url="{{ path('app_event_edit', { id: event.id }) }}"
                    title="{{ 'crud.edit' | trans }}"
                >
                    <span class="fa fa-edit"></span>
                </button>
                <button class="js-list-delete js-delete btn btn-xs btn-danger"
                    data-delete-url="{{ path('app_event_delete', { id: event.id }) }}"
                    title="{{ 'crud.delete' | trans }}"
                >
                    <span class="fa fa-trash"></span>
                </button>
            </li>
        {% endfor %}
    </ul>
