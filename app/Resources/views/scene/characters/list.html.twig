{% if scene.id %}
    <li class="characters js-list"
        data-form-url="{{ path('app_character_new', { id: scene.id }) }}"
        data-list-url="{{ path('app_character_list', { id: scene.id, page: characters.currentPage }) }}"
    >
        <span class="fa fa-user-o logo-icon"></span>
        <span class="h4">
            {{ 'scene.tabs.characters' | trans }}
            <button class="btn btn-sm btn-success js-load-form" title="{{ 'character.actions.create' | trans }}">
                <span class="fa fa-plus"></span>
            </button>
            {% if scene.chapter %}
                <button class="btn btn-sm btn-default js-load-sublist"
                        title="{{ 'character.actions.add_existing' | trans }}"
                        data-list-url="{{ path('app_character_related', { id: scene.id }) }}"
                >
                    <span class="fa fa-link"></span>
                </button>
            {% endif %}
        </span>
        <ul>
            {% for character in scene.characters -%}
                <li>
                    <span class="sublist-label">{{ character | truncate(15) }}</span>
                    <button class="js-load-form js-edit-form btn btn-xs btn-primary"
                        data-form-url="{{ path('app_character_edit', { id: character.id }) }}"
                        title="{{ 'crud.edit' | trans }}"
                    >
                        <span class="fa fa-edit"></span>
                    </button>
                    <button class="js-display btn btn-xs btn-default"
                        data-display-url="{{ path('app_character_display', { id: character.id }) }}"
                        title="{{ 'crud.display' | trans }}"
                    >
                        <span class="fa fa-eye"></span>
                    </button>
                    <button class="js-list-delete js-delete btn btn-xs btn-warning"
                        data-delete-url="{{ path('app_character_remove_from_scene', { scene_id: scene.id, character_id: character.id }) }}"
                        title="{{ 'crud.remove_from_scene' | trans }}"
                    >
                        <span class="fa fa-scissors"></span>
                    </button>
                    <button class="js-list-delete js-delete btn btn-xs btn-danger"
                        data-delete-url="{{ path('app_character_delete', { id: character.id }) }}"
                        title="{{ 'crud.delete' | trans }}"
                    >
                        <span class="fa fa-trash"></span>
                    </button>

                </li>
            {%- endfor %}
        </ul>
    </li>
{% endif %}
