<div class="row">
    <div class="col-xs-12 text-right js-ajax-pagination" data-container="#characters">
        {% include 'partial/pagination.html.twig' with {
            paginator: characters,
            route: 'app_character_list',
            parameters: { id: scene.id } }
        %}
    </div>
</div>
<table class="table"
       data-form-url="{{ path('app_character_new', { id: scene.id }) }}"
       data-list-url="{{ path('app_character_list', { id: scene.id }) }}"
       id="character-list"
       data-container="#characters"
>
    <thead>
        <tr>
            <th>{{ 'character.name' | trans }}</th>
            <th>{{ 'crud.actions' | trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character }}</td>
                <td>
                    <button class="js-load-form js-edit-form btn btn-primary"
                        data-form-url="{{ path('app_character_edit', { id: character.id }) }}"
                        title="{{ 'crud.edit' | trans }}"
                    >
                        <span class="fa fa-edit"></span>
                    </button>
                    <button class="js-display btn btn-default"
                        data-display-url="{{ path('app_character_display', { id: character.id }) }}"
                        title="{{ 'crud.display' | trans }}"
                    >
                        <span class="fa fa-eye"></span>
                    </button>
                    <button class="js-list-delete js-delete btn btn-danger"
                        data-delete-url="{{ path('app_character_delete', { scene_id: scene.id, character_id: character.id }) }}"
                        title="{{ 'crud.delete' | trans }}"
                    >
                        <span class="fa fa-trash"></span>
                    </button>
                </td>
            </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2" class="text-right">
                <button class="btn btn-success js-load-form" title="{{ 'character.actions.create' | trans }}">
                    <span class="fa fa-plus"></span>
                </button>
                {% if scene.chapter %}
                    <button class="btn btn-default js-load-sublist"
                            title="{{ 'character.actions.add_existing' | trans }}"
                            data-list-url="{{ path('app_character_related', { id: scene.id }) }}"
                    >
                        <span class="fa fa-user-o"></span>
                    </button>
                {% endif %}
            </td>
        </tr>
    </tfoot>
</table>
