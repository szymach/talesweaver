<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'modal.close' | trans }}">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">{{ 'item.display.title' | trans({ '%name%': item.name }) }}</h4>
</div>
<div class="modal-body">
    {{ item.description|raw }}
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">
        {{- 'modal.close' | trans -}}
    </button>
</div>
