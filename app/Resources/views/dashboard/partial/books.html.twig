<section class="col-xs-12 col-md-8">
    <h2>{{ 'home.dashboard.books' | trans }}</h2>
    <table class="table dashboard">
        <thead>
            <tr>
                <th>{{ 'book.title' | trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>
                        <a href="{{ path('app_book_edit', { id: book.id }) }}">
                            {{ book }}
                            <span class="fa fa-edit"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
