<section class="col-xs-12">
    <h2>
        {{ 'dashboard.books' | trans }}
        <a href="{{ path('app_book_new') }}" class="btn btn-success pull-right" title="{{ 'book.actions.create' | trans }}">
            <span class="fa fa-plus"></span>
        </a>
    </h2>
    <table class="table dashboard">
        <thead>
            <tr>
                <th>{{ 'book.title' | trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>
                        <a href="{{ path('app_book_edit', { id: book.id }) }}">
                            {{ book }}
                            <span class="fa fa-edit"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
