<div class="panel panel-info">
    <div class="panel-heading">{{ 'home.dashboard.chapters.standalone' | trans }}</div>
    <div class="panel-body">
        <ul class="list-unstyled">
        {% for chapter in standaloneChapters %}
            <li>
                <a href="{{ path('app_standalone_chapter_edit', { id: chapter.id }) }}">
                    {{ chapter }}
                    <span class="fa fa-edit"></span>
                </a>
            </li>
        {% endfor %}
        </ul>
    </div>
</div>
