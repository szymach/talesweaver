{% if books | length %}
    <div class="panel panel-info inline-block">
        <div class="panel-heading">{{ 'home.dashboard.books' | trans }}</div>
        <div class="panel-body">
            <ul class="list-unstyled">
            {% for book in books %}
                <li>
                    <a href="{{ path('app_book_edit', { id: book.id }) }}">
                        {{ book }}
                        <span class="fa fa-edit"></span>
                    </a>
                </li>
            {% endfor %}
            </ul>
        </div>
    </div>
{% endif %}
