<div class="row">
    <div class="col-xs-12 text-right js-ajax-pagination" data-container="#chapters">
        {% include 'partial/pagination.html.twig' with {
            paginator: chapters,
            route: 'app_book_chapter_list',
            parameters: { id: bookId } }
        %}
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>{{ 'chapter.title' | trans }}</th>
            <th>{{ 'crud.actions' | trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for chapter in chapters %}
            <tr>
                <td>{{ chapter.title }}</td>
                <td>
                    <a class="btn btn-primary"
                       href="{{ path('app_chapter_edit', { id: chapter.id }) }}"
                       title="{{ 'crud.edit' | trans }}"
                    >
                        <span class="fa fa-edit"></span>
                    </a>
                    <a class="btn btn-danger js-delete"
                       href="{{ path('app_chapter_delete', { id: chapter.id }) }}"
                       title="{{ 'crud.delete' | trans }}"
                    >
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
