<table class="table">
    <thead>
        <tr>
            <th>{{ 'chapter.title' | trans }}</th>
            <th>{{ 'crud.actions' | trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for chapter in chapters %}
        <tr>
            <td>{{ chapter }}</td>
            <td>
                <a class="btn btn-primary"
                   href="{{ path('app_chapter_edit', { id: chapter.id }) }}"
                   title="{{ 'crud.edit' | trans }}"
                >
                    <span class="fa fa-edit"></span>
                </a>
                <a class="btn btn-danger js-delete"
                   href="{{ path('app_chapter_delete', { id: chapter.id }) }}"
                   title="{{ 'crud.delete' | trans }}"
                >
                    <span class="fa fa-trash"></span>
                </a>
            </td>
        </tr>
    {% endfor %}
        <tfoot>
            <tr>
                {% if book.id %}
                    <td colspan="2" class="text-right">
                        <a class="btn btn-success"
                           href="{{ path('app_chapter_new_assigned', { id: book.id }) }}"
                           title="{{ 'crud.create' | trans }}"
                        >
                            <span class="fa fa-plus"></span>
                        </a>
                    </td>
                {% endif %}
            </tr>
        </tfoot>
    </tbody>
</table>
