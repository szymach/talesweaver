{% extends 'base.html.twig' %}

{% block seo_title 'book.header.create' | trans %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block top_menu_right %}
    <ul class="nav navbar-nav pull-right">
        <li>
            <a href="{{ path('app_book_list', { page: app.request.get('page', 1) }) }}">
                <span class="fa fa-angle-left"></span>
                {{ 'book.back.to_list' | trans }}
            </a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            {{ form_start(form) }}
                {# Tabs #}
                {{ form_row(form.title) }}
                {{ form_row(form.description) }}
                {{ form_rest(form) }}
                <button class="btn btn-primary pull-right">{{ 'crud.save' | trans }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
