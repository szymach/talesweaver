<div class="row">
    <div class="col-xs-12 col-sm-offset-6 col-sm-6">
        {{ form_start(sceneForm) }}
            {{ form_rest(sceneForm) }}
            <button class="btn btn-primary">{{ 'crud.save' | trans }}</button>
        {{ form_end(sceneForm) }}
    </div>
</div>
<div class="row">
    <div class="col-xs-12 text-right js-ajax-pagination" data-container="#scenes">
        {% include 'partial/pagination.html.twig' with {
            paginator: scenes,
            route: 'app_chapter_scenes_list',
            parameters: { id: chapterId } }
        %}
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>{{ 'scene.title' | trans }}</th>
            <th>{{ 'crud.actions' | trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for scene in scenes %}
            <tr>
                <td>{{ scene }}</td>
                <td>
                    <a class="btn btn-primary"
                       href="{{ path('app_scene_edit', { id: scene.id }) }}"
                       title="{{ 'crud.edit' | trans }}"
                    >
                        <span class="fa fa-edit"></span>
                    </a>
                    <a class="btn btn-danger js-delete"
                       href="{{ path('app_scene_delete', { id: scene.id }) }}"
                       title="{{ 'crud.delete' | trans }}"
                    >
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
