{% extends 'base.html.twig' %}

{% block seoTitle 'scene.seo_title.list'|trans %}
{% block breadcrumbs %}
    {% include 'partial/breadcrumbs.html.twig' with {
        items: [
            { label: 'common.scenes'|trans }
        ],
        column: 'col-sm offset-md-2 col-md-8'
    } only %}
{% endblock %}
{% block body %}
    {% include 'partial/dataList.html.twig' with {
        filters: filters,
        headers: scenes.headers,
        rows: scenes.paginator,
        create: {
            label: 'scene.list.create',
            path: path('scene_create', { page: page })
        },
        noResults: {
            header: 'scene.list.standalone.no_results.header',
            action: 'scene.list.standalone.no_results.add_new',
            title: 'scene.actions.create'
        },
        sort: 'scenes',
        action: {
            edit: 'scene_edit',
            display: 'scene_display',
            delete: 'scene_delete'
        },
        page: page
    } only %}
{% endblock %}

{% block modals %}
    {% include 'modal/display.html.twig' with { class: 'modal-lg'} only %}
{% endblock %}
