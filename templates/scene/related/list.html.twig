<ul class="js-ajax-pagination" data-list-url="{{ path('scene_related_list', { id: chapterId, page: page }) }}">
    {% for scene in scenes %}
        <li>
            <span class="sublist-label">{{ scene.title }}</span>
            <span class="list-actions">
                <a class="btn btn-sm btn-primary"
                   href="{{ path('scene_edit', { id: scene.id }) }}"
                   title="{{ 'crud.edit'|trans }}"
                >
                    <span class="fa fa-edit"></span>
                </a>
            </span>
        </li>
    {% endfor %}
</ul>
{% include 'partial/pagination.html.twig' with {
    paginator: scenes,
    route: 'scene_related_list',
    parameters: { id: chapterId, page: page }
} only %}
