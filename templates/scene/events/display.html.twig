<div class="modal-header">
    <h4 class="modal-title">{{ event.name }}</h4>
    <button type="button" class="close js-close-modal" aria-label="{{ 'modal.close'|trans }}">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="pb-2">{{ event.description|raw }}</div>
    {% if event.location is not null %}
        <div class="pb-2">
            <h5>{{ 'event.display.location'|trans }}</h5>
            <p>{{ event.location }}</p>
        </div>
    {% endif %}
    {% if event.characters|length > 0 %}
        <div class="pb-2">
            <h5>{{ 'event.characters'|trans }}</h5>
            <ul>
                {% for character in event.characters %}
                    <li>{{ character.name }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    {% if event.items|length > 0 %}
        <div class="pb-2">
            <h5>{{ 'event.items'|trans }}</h5>
            <ul>
                {% for item in event.items %}
                    <li>{{ item.name }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-outline-secondary js-close-modal">
        {{- 'modal.close'|trans -}}
    </button>
</div>
