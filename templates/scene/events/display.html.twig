<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'modal.close' | trans }}">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">{{ event.name }}</h4>
</div>
<div class="modal-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                {% include event.model|eventTemplateName with { model: event.model } only %}
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">
        {{- 'modal.close' | trans -}}
    </button>
</div>
