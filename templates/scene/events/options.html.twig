<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'modal.close' | trans }}">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">{{ 'event.modal.title'|trans }}</h4>
</div>
<div class="modal-body">
    <div class="container-fluid">
        <div class="row">
            {% for model in eventModels %}
                <button data-form-url="{{ path('event_add', { id: sceneId, model: model }) }}"
                        class="btn btn-success btn-xs js-load-form"
                >
                    {{ ('event.' ~ model ~ '.name') | trans }}
                    <span class="fa fa-plus"></span>
                </button>
            {% endfor %}
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'modal.close' | trans }}</button>
</div>

