<li>
    <span class="h4">
        <button class="btn btn-xs btn-default js-list-toggle"
                data-list-url="{{ path('event_list', { id: sceneId, page: 1 }) }}"
                title="{{ 'crud.list'|trans }}"
        >
            <span class="fa fa-list"></span>
        </button>
        <span>{{ 'scene.tabs.events' | trans }}</span>
    </span>
    {% for model in eventModels %}
        <span data-form-url="{{ path('event_add', { id: sceneId, model: model }) }}" class="js-load-form js-edit-form cursor-pointer">
            {{ ('event.' ~ model ~ '.name') | trans }}
            <span class="fa fa-plus btn btn-success btn-xs"></span>
        </span>
    {% endfor %}
    <span class="js-list-container"></span>
</li>
