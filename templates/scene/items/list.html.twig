<li class="items js-list js-ajax-pagination"
    data-form-url="{{ path('item_new', { id: sceneId }) }}"
    data-list-url="{{ path('item_list', { id: sceneId, page: items.currentPage }) }}"
>
    <span class="fa fa-key logo-icon"></span>
    <span class="h4">
        {{ 'scene.tabs.items' | trans }}
        <button class="btn btn-xs btn-success js-load-form" title="{{ 'item.actions.create' | trans }}">
            <span class="fa fa-plus"></span>
        </button>
        {% if chapterId %}
            <button class="btn btn-xs btn-default js-load-sublist"
                    title="{{ 'item.actions.add_existing' | trans }}"
                    data-list-url="{{ path('item_related', { id: sceneId }) }}"
            >
                <span class="fa fa-link"></span>
            </button>
        {% endif %}
    </span>
    {% include 'partial/pagination.html.twig' with { paginator: items, route: 'item_list', parameters: { id: sceneId, page: page }} only %}
    <ul>
        {% for item in items -%}
            <li>
                <span class="sublist-label">{{ item | truncate(15) }}</span>
                <span class="list-actions">
                    <button class="js-load-form js-edit-form btn btn-xs btn-primary"
                        data-form-url="{{ path('item_edit', { id: item.id }) }}"
                        title="{{ 'crud.edit' | trans }}"
                    >
                        <span class="fa fa-edit"></span>
                    </button>
                    <button class="js-display btn btn-xs btn-default"
                        data-display-url="{{ path('item_display', { id: item.id }) }}"
                        title="{{ 'crud.display' | trans }}"
                    >
                        <span class="fa fa-eye"></span>
                    </button>
                    {% if chapterId %}
                        <button class="js-list-delete js-delete btn btn-xs btn-danger"
                            data-delete-url="{{ path('item_remove_from_scene', { scene_id: sceneId, item_id: item.id }) }}"
                            title="{{ 'crud.remove_from_scene' | trans }}"
                        >
                            <span class="fa fa-scissors"></span>
                        </button>
                    {% endif %}
                    <button class="js-list-delete js-delete btn btn-xs btn-danger"
                        data-delete-url="{{ path('item_delete', { id: item.id }) }}"
                        title="{{ 'crud.delete' | trans }}"
                    >
                        <span class="fa fa-trash"></span>
                    </button>
                </span>
            </li>
        {%- endfor %}
    </ul>
</li>
