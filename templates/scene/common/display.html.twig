<div class="modal-header">
    <button type="button" class="js-close-modal close" aria-label="{{ 'modal.close'|trans }}">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">{{ view.name }}</h4>
</div>
{% if view.avatar is not null or view.description is not empty %}
<div class="modal-body">
    <div class="row">
        {% if view.avatar %}
        <div class="col-xs-12 col-md-6">
            <img class="img-responsive center-block" width="300" src="{{ fsi_file_url(view.avatar.value) }}" />
        </div>
        {% endif %}
        {% if view.description is not empty %}
        <div class="col-xs-12{% if view.avatar %} col-md-6{% endif %}">
            <section class="scene-item-description">
                {{ view.description|raw }}
            </section>
        </div>
        {% endif %}
    </div>
</div>
{% endif %}
<div class="modal-footer">
    <button type="button" class="btn btn-default js-close-modal">
        {{- 'modal.close'|trans -}}
    </button>
</div>
