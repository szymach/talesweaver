<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'modal.close' | trans }}">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">{{ character.name }}</h4>
</div>
<div class="modal-body">
    <div class="container-fluid">
        <div class="row">
            {% if character.avatar %}
                <div class="col-xs-12 col-md-6">
                    <img class="img-responsive center-block" width="300" src="{{ fsi_file_url(character.avatar) }}" />
                </div>
            {% endif %}
            <div class="col-xs-12{% if character.avatar %} col-md-6{% endif %}">
                {{ character.description|raw }}
            </div>
        </div>
        <div class="row">
            {% for name, event in timeline %}
                <div class="col-xs-12">
                    <b><i class="{{ event|keys|first }}"></i> {{ name|trans }}</b> {{ event|first|raw }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">
        {{- 'modal.close' | trans -}}
    </button>
</div>
