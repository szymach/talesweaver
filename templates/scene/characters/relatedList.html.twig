<h3>{{ 'character.header.related'|trans }}</h3>
<table class="table">
    <thead>
        <tr>
            <th>{{ 'character.name'|trans }}</th>
            <th>{{ 'crud.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character }}</td>
                <td>
                    <button class="btn btn-success btn-sm js-list-action"
                        data-action-url="{{ path('character_add_to_scene', { scene_id: sceneId, character_id: character.id }) }}"
                        data-list-id=".characters.js-list"
                        title="{{ 'character.actions.add_to_scene'|trans({ '%scene%': sceneTitle }) }}"
                    >
                        <span class="fa fa-plus"></span>
                    </button>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
