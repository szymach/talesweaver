{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block seoTitle 'scene.seo_title.form.create'|trans %}
{% block rightMenu %}
    {% include 'partial/topMenuActions.html.twig' with {
        returnUrl: chapterId ? path('chapter_edit', { id: chapterId }) : path('scene_list', { page: app.request.get('page') }),
        returnLabel: chapterId ? 'scene.back.to_chapter' : 'scene.back.to_list'|trans
    } only %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3 content-container">
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.chapter) }}
                <button class="btn btn-success pull-right">{{ 'crud.save'|trans }}</button>
                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
