{% extends 'administration/base.html.twig' %}

{% trans_default_domain 'administration' %}

{% block seoTitle 'login.title'|trans %}
{% block body %}
    {% if error %}
        <div class="row">
            <div class="col-md-8 offset-md-2 col-xl-6 offset-xl-3">
                <div class="alert alert-danger alert-form text-center" role="alert">{{ error }}</div>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-8 offset-md-2 col-xl-6 offset-xl-3">
            <form method="POST" novalidate="novalidate">
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">{{ 'login.email.label'|trans }}</label>
                    <div class="col-sm">
                        <input id="email"
                            type="email"
                            name="_email"
                            class="form-control"
                            placeholder="{{ 'login.email.placeholder'|trans }}"
                            {% if lastUsername is empty %}autofocus="autofocus"{% endif %}
                            value="{{ lastUsername }}"
                            tabindex="1"
                        />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-sm-2 col-form-label">{{ 'login.password.label'|trans }}</label>
                    <div class="col-sm">
                        <input id="password"
                            type="password"
                            name="_password"
                            class="form-control"
                            placeholder="{{ 'login.password.placeholder'|trans }}"
                            {% if lastUsername is not empty %}autofocus="autofocus"{% endif %}
                            tabindex="2"
                        />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col text-right">
                        <button class="btn btn-success" tabindex="3">{{ 'login.submit'|trans }}</button>
                    </div>
                </div>
                {% if app.environment != 'test' %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('admin_authenticate') }}" />
                {% endif %}
            </form>
        </div>
    </div>
{% endblock %}
