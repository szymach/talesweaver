<div class="modal" tabindex="-1" role="dialog" id="modal-form">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">{{ title|default('modal.form.title')|trans }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'modal.close'|trans }}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
                    {{- 'modal.close'|trans -}}
                </button>
                <button type="button" class="btn btn-success" id="modal-form-submit">
                    {{- 'modal.form.submit'|trans -}}
                </button>
            </div>
        </div>
    </div>
</div>
