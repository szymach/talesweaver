{% extends 'security/base.html.twig' %}

{% block seoTitle 'security.login.header'|trans %}
{% block subheader 'security.login.header'|trans %}

{% block links %}
    <a class="btn btn-default btn-sm" href="{{ path('password_reset_request') }}">{{ 'security.login.password_reset'|trans }}</a>
    <a class="btn btn-default btn-sm" href="{{ path('register') }}">{{ 'security.login.register'|trans }}</a>
{% endblock %}

{% block body %}
    {% if error %}
        <div class="row">
            <div class="col-xs-12 col-md-6 col-md-offset-3">
                <div class="alert alert-danger alert-form text-center" role="alert">{{ error }}</div>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
            <form method="POST" class="form-horizontal" novalidate="novalidate">
                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">{{ 'security.login.email.label'|trans }}</label>
                    <div class="col-sm-10">
                        <input id="email"
                               type="email"
                               name="_email"
                               class="form-control"
                               placeholder="{{ 'security.login.email.placeholder'|trans }}"
                               {% if lastUsername is empty %}autofocus="autofocus"{% endif %}
                               value="{{ lastUsername }}"
                        />
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">{{ 'security.login.password.label'|trans }}</label>
                    <div class="col-sm-10">
                        <input id="password"
                               type="password"
                               name="_password"
                               class="form-control"
                               placeholder="{{ 'security.login.password.placeholder'|trans }}"
                               {% if lastUsername is not empty %}autofocus="autofocus"{% endif %}
                        />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 text-right">
                        <button class="btn btn-sm btn-success">{{ 'security.login.submit'|trans }}</button>
                    </div>
                </div>
                {% if app.environment != 'test' %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                {% endif %}
            </form>
        </div>
    </div>
{% endblock %}
