{% extends 'security/base.html.twig' %}

{% form_theme form 'form/formTheme.html.twig' %}

{% block seoTitle 'security.registration.header'|trans %}
{% block subheader 'security.registration.header'|trans %}

{% block links %}
    <a href="{{ path('index') }}" class="btn btn-sm btn-link">{{ 'security.registration.login'|trans }}</a>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 offset-md-2 col-xl-6 offset-xl-3">
            {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                {{ form_row(form.name) }}
                {{ form_row(form.surname) }}
                <div class="form-group row">
                    <div class="col-sm text-right">
                        <button class="btn btn-success">{{ 'security.registration.submit'|trans }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
