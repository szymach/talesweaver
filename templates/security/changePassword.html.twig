{% extends 'base.html.twig' %}

{% form_theme form 'form/formTheme.html.twig' %}

{% block seoTitle 'security.change_password.header'|trans %}
{% block subheader 'security.change_password.header'|trans %}

{% block body %}
    <h1 class="text-center" style="margin-bottom: 30px">{{ 'security.change_password.header'|trans }}</h1>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            {{ form_start(form) }}
                {{ form_rest(form) }}
                <div class="form-group row">
                    <div class="col-sm text-right">
                        <button class="btn btn-sm btn-success">{{ 'security.change_password.submit'|trans }}</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
