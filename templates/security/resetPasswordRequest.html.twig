{% extends 'security/base.html.twig' %}

{% form_theme form 'form/formTheme.html.twig' %}

{% block seoTitle 'security.reset_password.request.header'|trans %}
{% block subheader 'security.reset_password.request.header'|trans %}

{% block links %}
    <a href="{{ path('index') }}" class="btn btn-sm btn-default">{{ 'security.registration.login'|trans }}</a>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-offset-2 col-sm-8">
            {{ form_start(form) }}
                {{ form_row(form.email) }}
                <div class="form-group">
                    <div class="col-xs-12 text-right">
                        <button class="btn btn-sm btn-success">{{ 'security.reset_password.request.submit'|trans }}</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
