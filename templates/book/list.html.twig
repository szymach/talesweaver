{% extends 'base.html.twig' %}

{% block seoTitle 'book.seo_title.list'|trans %}
{% block breadcrumbs %}
    {% include 'partial/breadcrumbs.html.twig' with {
        items: [
            { label: 'common.books'|trans }
        ],
        column: 'col-sm offset-md-2 col-md-8'
    } only %}
{% endblock %}
{% block body %}
    {% include 'partial/dataList.html.twig' with {
        filters: null,
        headers: books.headers,
        rows: books.paginator,
        create: {
            label: 'book.list.create',
            path: path('book_create', { page: page })
        },
        noResults: {
            header: 'book.list.no_results.header',
            action: 'book.list.no_results.add_new',
            title: 'book.actions.create'
        },
        sort: 'books',
        action: {
            edit: 'book_edit',
            display: 'book_display',
            delete: 'book_delete'
        },
        page: page
    } only %}
{% endblock %}

{% block modals %}
    {% include 'modal/display.html.twig' with { class: 'modal-lg'} only %}
{% endblock %}
