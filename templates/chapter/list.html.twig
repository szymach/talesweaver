{% extends 'base.html.twig' %}

{% block seoTitle 'chapter.seo_title.list'|trans %}
{% block breadcrumbs %}
    {% include 'partial/breadcrumbs.html.twig' with {
        items: [
            { label: 'common.chapters'|trans }
        ],
        column: 'col-sm offset-md-2 col-md-8'
    } only %}
{% endblock %}
{% block body %}
    {% include 'partial/dataList.html.twig' with {
        filters: filters,
        headers: chapters.headers,
        rows: chapters.paginator,
        create: {
            label: 'chapter.list.create',
            path: path('chapter_create', { page: page })
        },
        noResults: {
            header: 'chapter.list.standalone.no_results.header',
            action: 'chapter.list.standalone.no_results.add_new',
            title: 'chapter.actions.create'
        },
        sort: 'chapters',
        action: {
            edit: 'chapter_edit',
            display: 'chapter_display',
            delete: 'chapter_delete'
        },
        page: page
    } only %}
{% endblock %}

{% block modals %}
    {% include 'modal/display.html.twig' with { class: 'modal-lg'} only %}
{% endblock %}
