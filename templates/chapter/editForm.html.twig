{% extends 'base.html.twig' %}

{% import 'partial/macros.html.twig' as macros %}

{% form_theme form 'form/formTheme.html.twig' %}

{% block seoTitle 'chapter.seo_title.form.edit'|trans({ '%title%': title }) %}

{% block body %}
    <div class="row">
        <div class="col col-md-10 offset-md-1">
            {{ macros.tabNavigation([
                macros.tab('formContentTab', 'formContent', 'common.content', 'active'),
                macros.tab('scenesTab', 'scenes', 'common.scenes', '')
            ], {
                link: bookId is not null ? path('book_edit', { id: bookId }) : path('chapter_list'),
                label: (bookId is not null ? 'chapter.back.to_book' : 'chapter.back.to_list')|trans
            }) }}
        </div>
    </div>
    <div class="row">
        <div class="col col-md-10 offset-md-1">
            <div class="tab-content pt-2 pb-2">
                {{ macros.tabContent(
                    'formContent',
                    'formContentTab',
                    include('chapter/tab/content.html.twig', { form: form }, with_context = false),
                    'active show'
                ) }}
                {{ macros.tabContent(
                    'scenes',
                    'scenesTab',
                    include('chapter/tab/scenes.html.twig', { chapterId: chapterId, scenes: scenes, page: 1 }, with_context = false),
                    'js-list-container'
                ) }}
            </div>
        </div>
    </div>
    {% block modals %}
        {% include 'modal/display.html.twig' with { class: 'modal-lg' } only %}
        {% include 'modal/form.html.twig' with {} only %}
    {% endblock %}
    {% embed 'partial/sidemenu.html.twig' with {
        display: macros.sidemenuDisplayLink(path('chapter_display', { id: chapterId })),
        pdf: macros.sidemenuPdfLink(path('chapter_pdf', { id: chapterId }))
    } %}
        {% block content %}
            {{ display|raw }}
            {{ pdf|raw }}
        {% endblock %}
    {% endembed %}
{% endblock %}
