{% extends 'base.html.twig' %}

{% import 'partial/macros.html.twig' as macros %}

{% form_theme form 'form/formTheme.html.twig' %}
{% form_theme sceneForm 'form/formTheme.html.twig' %}

{% block seoTitle 'chapter.seo_title.form.edit'|trans({ '%title%': title }) %}
{% block rightMenu %}
    {% include 'partial/topMenuActions.html.twig' with {
        returnUrl: bookId ? path('book_edit', { id: bookId }) : path('chapter_list'),
        returnLabel: bookId ? 'chapter.back.to_book'|trans : 'chapter.back.to_list'|trans
    } only %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col col-sm-8 offset-sm-1">
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                <div class="form-group row">
                    <div class="col text-right">
                        <button class="btn btn-success pull-right">{{ 'crud.save'|trans }}</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div id="ajax-container"></div>
    <nav class="side-menu">
        <ul id="side-menu" class="collapse show">
            {% include 'chapter/scenes/listHeader.html.twig' with {
                chapterId: chapterId,
                sceneForm: sceneForm
            } only %}
            {{ macros.sidemenuLink('eye', 'display.title'|trans, 'display.label'|trans, path('chapter_display', { id: chapterId })) }}
            {{ macros.sidemenuLink('file-pdf-o', 'pdf.title'|trans, 'pdf.label'|trans, path('chapter_pdf', { id: chapterId })) }}
        </ul>
        <div data-target="#side-menu" data-toggle="collapse" class="text-center">
            <button class="btn btn-sm" style="width: 100%;">
                <span class="fa fa-chevron-up"></span>
            </button>
        </div>
    </nav>
{% endblock %}
