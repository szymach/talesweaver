{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block seoTitle 'chapter.seo_title.form.create'|trans %}
{% block rightMenu %}
    {% include 'partial/topMenuActions.html.twig' with {
        returnUrl: bookId ? path('book_edit', { id: bookId }) : path('chapter_list'),
        returnLabel: bookId ? 'chapter.back.to_book'|trans : 'chapter.back.to_list'|trans
    } only %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-10 col-sm-offset-1 col-md-6 col-md-offset-3">
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.book) }}
                <button class="btn btn-success pull-right">{{ 'crud.save'|trans }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
