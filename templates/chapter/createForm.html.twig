{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block seoTitle 'chapter.seo_title.form.create'|trans %}
{% block rightMenu %}
    {% include 'partial/topMenuActions.html.twig' with {
        returnUrl: bookId ? path('book_edit', { id: bookId }) : path('chapter_list'),
        returnLabel: bookId ? 'chapter.back.to_book'|trans : 'chapter.back.to_list'|trans
    } only %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-10 offset-sm-2 col-md-8">
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                <div class="form-group row">
                    <div class="col text-right">
                        <button class="btn btn-success pull-right">{{ 'crud.save'|trans }}</button>
                    </div>
                </div>
            {{ form_end(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
