{% extends 'base.html.twig' %}

{% form_theme form 'form/formTheme.html.twig' %}

{% block seoTitle 'chapter.seo_title.form.create'|trans %}
{% block breadcrumbs %}
    {% include 'partial/breadcrumbs.html.twig' with {
        items: [
            { label: 'common.chapters'|trans, url: path('chapter_list') },
            { label: 'chapter.seo_title.form.create'|trans }
        ]
    } only %}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col">
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.book) }}
                {{ form_row(form.preface) }}
                <div class="form-group row">
                    <div class="col text-right">
                        <a class="btn btn-outline-secondary"
                           href="{{ bookId is not null ? path('book_edit', { id: bookId }) : path('chapter_list') }}"
                        >
                            <span class="fa fa-angle-left"></span>
                            {{ (bookId is not null ? 'chapter.back.to_book' : 'chapter.back.to_list')|trans }}
                        </a>
                        <button class="btn btn-success">{{ 'crud.save'|trans }}</button>
                    </div>
                </div>
                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/ckeditor.css')) }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ absolute_url(asset('assets/ckeditor.js')) }}" async></script>
{% endblock %}
