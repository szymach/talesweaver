<div class="text-right pb-2">
    <button class="btn btn-sm btn-success js-load-form"
            title="{{ 'chapter.actions.create_scene'|trans }}"
            data-form-url="{{ path('chapter_add_scene', { id: chapterId }) }}"
    >
        <span class="fa fa-plus"></span>
    </button>
</div>
<ul class="js-ajax-pagination list-inline" data-list-url="{{ path('chapter_scenes_list', { id: chapterId }) }}">
    {% if scenes|length > 0 %}
        {% for scene in scenes %}
        {% set displayLink = path('scene_display', { id: scene.id }) %}
            <li class="list-inline-item pt-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ scene.title }}</h5>
                        <div class="text-center">
                            <a class="btn btn-sm btn-primary"
                               href="{{ path('scene_edit', { id: scene.id }) }}"
                               title="{{ 'crud.edit'|trans }}"
                            >
                                <span class="fa fa-edit"></span>
                            </a>
                            <a class="js-display btn btn-sm btn-outline-secondary"
                               href="{{ displayLink }}"
                               data-display-url="{{ displayLink }}"
                               target="_blank"
                               title="{{ 'crud.display'|trans }}"
                            >
                                <span class="fa fa-eye"></span>
                            </a>
                            <button class="js-list-delete js-delete btn btn-sm btn-danger"
                                    data-delete-url="{{ path('scene_delete', { id: scene.id }) }}"
                                    title="{{ 'crud.delete'|trans }}"
                            >
                                <span class="fa fa-trash"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </li>
        {% endfor %}
    {% endif %}
</ul>
{% include 'partial/pagination.html.twig' with { paginator: scenes, route: 'chapter_scenes_list', parameters: { id: chapterId }} only %}
