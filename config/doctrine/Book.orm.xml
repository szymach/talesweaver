<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:fsi="http://fsi.pl/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity repository-class="App\Repository\Doctrine\BookRepository" name="Domain\Entity\Book">

        <fsi:translatable-locale field="locale" />
        <fsi:translatable-field field="title" mappedBy="translations" />
        <fsi:translatable-field field="description" mappedBy="translations" />

        <id name="id" type="uuid" />
        <field name="createdAt" type="datetime" />
        <field name="updatedAt" type="datetime" nullable="true"/>

        <one-to-many field="chapters" target-entity="Domain\Entity\Chapter" mapped-by="book">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many field="translations" target-entity="Domain\Entity\Translation\BookTranslation" mapped-by="book">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one field="createdBy" target-entity="Domain\Entity\User" />

    </entity>
</doctrine-mapping>
