<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:fsi="http://fsi.pl/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity repository-class="App\Repository\Doctrine\ChapterRepository" name="Domain\Entity\Chapter">

        <fsi:translatable-locale field="locale" />
        <fsi:translatable-field field="title" mappedBy="translations" />

        <id name="id" type="uuid"/>
        <field name="createdAt" type="datetime"/>
        <field name="updatedAt" type="datetime" nullable="true"/>

        <one-to-many field="scenes" target-entity="Domain\Entity\Scene" mapped-by="chapter" />
        <one-to-many field="translations" target-entity="Domain\Entity\Translation\ChapterTranslation" mapped-by="chapter">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one field="book" target-entity="Domain\Entity\Book" inversed-by="chapters">
            <join-columns>
                <join-column on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="createdBy" target-entity="Domain\Entity\User">
            <join-columns>
                <join-column on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>

    </entity>
</doctrine-mapping>
