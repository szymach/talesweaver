<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:fsi="http://fsi.pl/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity repository-class="Talesweaver\Doctrine\Repository\ItemRepository" name="Talesweaver\Domain\Item">

        <fsi:translatable-locale field="locale" />
        <fsi:translatable-field field="name" mappedBy="translations" />
        <fsi:translatable-field field="description" mappedBy="translations" />

        <id name="id" type="uuid"/>
        <field name="avatarKey" type="text" nullable="true"/>
        <field name="createdAt" type="datetime"/>
        <field name="updatedAt" type="datetime" nullable="true"/>

        <one-to-many field="translations" target-entity="Talesweaver\Domain\Translation\ItemTranslation" mapped-by="item">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one field="createdBy" target-entity="Talesweaver\Domain\Author">
            <join-columns>
                <join-column on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>

        <many-to-many field="scenes" target-entity="Talesweaver\Domain\Scene" mapped-by="items"/>

    </entity>
</doctrine-mapping>
