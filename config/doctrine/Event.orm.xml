<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:fsi="http://fsi.pl/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity repository-class="App\Repository\Doctrine\EventRepository" name="Domain\Entity\Event" table="event_entity">

        <fsi:translatable-locale field="locale" />
        <fsi:translatable-field field="name" mappedBy="translations" />

        <id name="id" type="uuid"/>
        <field name="createdAt" type="datetime"/>
        <field name="updatedAt" type="datetime" nullable="true"/>
        <field name="model" type="json_array" column="model"/>

        <one-to-many field="translations" target-entity="Domain\Entity\Translation\EventTranslation" mapped-by="event">
            <cascade>
                <cascade-remove/>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <many-to-one field="scene" target-entity="Domain\Entity\Scene">
            <join-columns>
                <join-column on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="createdBy" target-entity="Domain\Entity\User">
            <join-columns>
                <join-column on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>

        <entity-listeners>
            <entity-listener class="App\JSON\ModelParserListener">
                <lifecycle-callback type="postLoad" method="postLoad"/>
            </entity-listener>
        </entity-listeners>

    </entity>
</doctrine-mapping>
