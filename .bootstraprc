bootstrapVersion: 3
preBootstrapCustomizations: ./assets/scss/paper/_variables.scss
appStyles: ./assets/scss/paper/_bootswatch.scss
mainSass: ./assets/scss/base.scss
scripts:
    affix: true
    alert: true
    button: true
    carousel: false
    collapse: true
    dropdown: true
    modal: true
    popover: false
    scrollspy: false
    tab: false
    tooltip: false
    transition: true
styleLoaders: ['style-loader', 'css-loader', 'sass-loader']
extractStyles: true
styles:
    # Mixins
    mixins: true

    # Reset and dependencies
    normalize: true
    print: false
    glyphicons: false

    # Core CSS
    scaffolding: true
    type: true
    code: false
    grid: true
    tables: true
    forms: true
    buttons: true

    # Components
    component-animations: true
    dropdowns: true
    button-groups: false
    input-groups: false
    navs: true
    navbar: true
    breadcrumbs: false
    pagination: true
    pager: false
    labels: true
    badges: false
    jumbotron: false
    thumbnails: false
    alerts: true
    progress-bars: false
    media: true
    list-group: false
    panels: false
    wells: true
    responsive-embed: false
    close: true

    # Components w/ JavaScript
    modals: true
    tooltip: false
    popovers: false
    carousel: false

    # Utility classes
    utilities: true
    responsive-utilities: true
