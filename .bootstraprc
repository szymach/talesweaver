bootstrapVersion: 4
preBootstrapCustomizations: ./assets/scss/sandstone/_variables.scss
appStyles: ./assets/scss/base.scss
extractStyles: true
scripts: false
styleLoaders:
  - css-loader?sourceMap
  - resolve-url-loader?sourceMap
  - sass-loader?sourceMap
styles:
  # Mixins
  mixins: true

  # Reset and dependencies
  print: true

  # Core CSS
  buttons: true
  code: false
  forms: true
  grid: true
  images: true
  reboot: true
  tables: true
  type: true

  # Components
  alert: true
  badge: false
  breadcrumb: true
  button-group: true
  card: true
  close: true
  custom-forms: true
  dropdown: true
  input-group: true
  jumbotron: false
  list-group: true
  media: true
  nav: true
  navbar: true
  pagination: true
  progress: false
  transitions: true

  # Components w/ JavaScript
  carousel: false
  modal: true
  popover: true
  tooltip: true

  # Utility classes
  utilities: true
